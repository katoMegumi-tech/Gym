.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.picker {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.input {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.textarea {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

.rating {
  display: flex;
  gap: 10rpx;
}

.star {
  font-size: 50rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

.submit-btn {
  margin-top: 20rpx;
}

.history {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feedback-item {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.feedback-type {
  font-size: 24rpx;
  color: #1890ff;
}

.feedback-status {
  font-size: 24rpx;
  color: #52c41a;
}

.feedback-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.feedback-content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.feedback-reply {
  background: #e6f7ff;
  padding: 15rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

.reply-label {
  font-size: 24rpx;
  color: #1890ff;
  margin-bottom: 5rpx;
}

.reply-content {
  font-size: 26rpx;
  color: #333;
}

.feedback-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}
