.container {
  padding: 0;
  background: #f7f8fa;
  min-height: 100vh;
}

.banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.banner::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.banner::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.banner-title {
  display: block;
  color: white;
  font-size: 52rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
}

.banner-subtitle {
  display: block;
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  position: relative;
  z-index: 1;
  line-height: 1.6;
}

.search-bar {
  margin: 0 24rpx 32rpx;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  background: white;
  padding: 24rpx 32rpx;
  border-radius: 60rpx 0 0 60rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.12);
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24rpx 36rpx;
  border-radius: 0 60rpx 60rpx 0;
  font-size: 28rpx;
  font-weight: 500;
}

/* 公告 */
.notice-section {
  margin: 0 24rpx 24rpx;
  background: #fff8e6;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.notice-swiper {
  flex: 1;
  height: 40rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #ff9800;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.section {
  margin-bottom: 48rpx;
  padding: 0 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #323233;
  padding-left: 12rpx;
  border-left: 4rpx solid #667eea;
  letter-spacing: 0.5rpx;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

.venue-scroll {
  white-space: nowrap;
  padding: 8rpx 0;
}

.venue-item {
  display: inline-block;
  width: 240rpx;
  margin-right: 24rpx;
  position: relative;
}

.venue-image {
  width: 240rpx;
  height: 180rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.venue-name {
  display: block;
  font-size: 28rpx;
  color: #323233;
  text-align: center;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 8rpx;
}

.venue-status-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
}

.venue-status-tag.open {
  background: rgba(76, 175, 80, 0.9);
}

.sport-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.sport-item {
  width: 31%;
  background: white;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  border: 2rpx solid transparent;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.sport-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.15);
  border-color: #667eea;
}

.sport-icon {
  display: block;
  font-size: 64rpx;
  margin-bottom: 12rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(102, 126, 234, 0.2));
}

.sport-name {
  display: block;
  font-size: 26rpx;
  color: #646566;
  font-weight: 500;
}
