/* 全局样式 */
page {
  background: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  color: #323233;
}

/* 通用容器 */
.container {
  min-height: 100vh;
}

/* 通用按钮样式 */
button {
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

button::after {
  border: none;
}

button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

/* 通用标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #646566;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

.tag-primary {
  background: linear-gradient(135deg, #e6f4ff 0%, #d6ebff 100%);
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.tag-success {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  color: #52c41a;
  border: 1rpx solid #95de64;
}

.tag-warning {
  background: linear-gradient(135deg, #fffbf0 0%, #fff7e6 100%);
  color: #faad14;
  border: 1rpx solid #ffd666;
}

.tag-danger {
  background: linear-gradient(135deg, #fff2f0 0%, #ffebe8 100%);
  color: #ff4d4f;
  border: 1rpx solid #ff7875;
}

/* 通用加载和空状态 */
.loading, .empty {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #969799;
  font-size: 28rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

/* 通用分割线 */
.divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #ebedf0, transparent);
  margin: 32rpx 0;
}

/* 通用间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* 通用文本对齐 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

/* 通用文本样式 */
.text-primary { color: #1890ff; }
.text-success { color: #52c41a; }
.text-warning { color: #faad14; }
.text-danger { color: #ff4d4f; }
.text-muted { color: #969799; }
.text-bold { font-weight: 600; }

/* 通用flex布局 */
.flex { display: flex; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-column { display: flex; flex-direction: column; }
.flex-wrap { display: flex; flex-wrap: wrap; }
.flex-1 { flex: 1; }

/* 通用阴影 */
.shadow-sm { box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04); }
.shadow { box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06); }
.shadow-lg { box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08); }
