.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 24rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -30%;
  right: -15%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.title {
  display: block;
  color: white;
  font-size: 44rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
}

.venue-list {
  padding: 24rpx;
}

.venue-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f0f1f5;
  transition: all 0.3s ease;
}

.venue-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 24rpx rgba(102, 126, 234, 0.15);
  border-color: #667eea;
}

.venue-image {
  width: 100%;
  height: 320rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.venue-image::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.3), transparent);
}

.venue-info {
  padding: 32rpx;
}

.venue-name {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.venue-meta {
  margin-bottom: 16rpx;
}

.venue-address,
.venue-time {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #646566;
  margin-bottom: 10rpx;
  line-height: 1.6;
}

.venue-address::before {
  content: 'üìç';
  margin-right: 8rpx;
}

.venue-time::before {
  content: 'üïê';
  margin-right: 8rpx;
}

.venue-status {
  display: flex;
  align-items: center;
}

.status-tag {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.status-tag.open {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #4caf50;
  border: 1rpx solid #81c784;
}

.status-tag.closed {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #f44336;
  border: 1rpx solid #e57373;
}

.loading,
.no-more {
  text-align: center;
  padding: 40rpx;
  color: #969799;
  font-size: 26rpx;
}

.empty {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 140rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
  filter: grayscale(0.3);
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #969799;
  line-height: 1.6;
}
