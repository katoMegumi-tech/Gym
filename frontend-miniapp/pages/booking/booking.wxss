.container {
  padding: 24rpx;
  padding-bottom: 180rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.court-info {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06);
  border: 2rpx solid #f0f1f5;
}

.court-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.court-desc {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.6;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 24rpx;
  padding-left: 12rpx;
  border-left: 4rpx solid #667eea;
  letter-spacing: 0.5rpx;
}

/* 日期选择 */
.date-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06);
}

.date-list {
  white-space: nowrap;
}

.date-item {
  display: inline-block;
  width: 120rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-right: 16rpx;
  transition: all 0.3s;
}

.date-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.date-day {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
}

.date-full {
  display: block;
  font-size: 22rpx;
  margin-top: 6rpx;
  opacity: 0.8;
}

/* 时间段 */
.timeslots {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06);
}

.slot-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.slot-item {
  width: 48%;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx solid #e5e6eb;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.slot-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
}

.slot-item.disabled {
  opacity: 0.5;
  background: #f0f0f0;
}

.slot-item.peak {
  border-color: #ff9800;
}

.slot-main {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.slot-time {
  font-size: 28rpx;
  font-weight: 600;
}

.peak-tag {
  font-size: 20rpx;
  background: #ff9800;
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

.slot-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5576c;
  display: block;
  margin-bottom: 4rpx;
}

.slot-item.selected .slot-price {
  color: white;
}

.slot-status {
  font-size: 22rpx;
  color: #999;
}

.slot-status.available {
  color: #4caf50;
}

.slot-item.selected .slot-status {
  color: rgba(255,255,255,0.8);
}

/* 联系信息 */
.contact-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 底部 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.price-info {
  flex: 1;
}

.price-info .label {
  font-size: 26rpx;
  color: #999;
}

.price-info .price {
  font-size: 40rpx;
  font-weight: bold;
  color: #f5576c;
}

.book-btn {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.book-btn.disabled {
  background: #ccc;
}

.loading, .empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}
