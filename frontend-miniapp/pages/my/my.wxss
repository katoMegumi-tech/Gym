.container {
  min-height: 100vh;
  background: #f5f6fa;
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.user-bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -80rpx;
}

.circle2 {
  width: 200rpx;
  height: 200rpx;
  bottom: -60rpx;
  left: -40rpx;
}

/* 头像区域 */
.avatar-wrapper {
  position: relative;
  z-index: 1;
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

.avatar-default {
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 80rpx;
}

.avatar-edit {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.edit-icon {
  font-size: 24rpx;
}

.username {
  font-size: 40rpx;
  color: white;
  font-weight: 600;
  position: relative;
  z-index: 1;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 用户统计 */
.user-stats {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  position: relative;
  z-index: 1;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}

.stat-num {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 未登录状态 */
.login-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 30rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.login-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border: 4rpx dashed rgba(255, 255, 255, 0.5);
}

.login-avatar-icon {
  font-size: 70rpx;
  opacity: 0.8;
}

.login-text {
  font-size: 36rpx;
  color: white;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.login-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 菜单列表 */
.menu-list {
  margin: 24rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-icon {
  font-size: 44rpx;
  margin-right: 24rpx;
  width: 56rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出按钮 */
.logout-btn {
  margin: 40rpx 24rpx 32rpx;
  background: white;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.logout-btn:active {
  background: #fff2f0;
}
