.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  margin-bottom: 60rpx;
  text-align: center;
}

.login-form {
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.15);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 90rpx;
  background: #f5f5f5;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  background: white;
  border-color: #667eea;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.login-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.wechat-login {
  margin-top: 40rpx;
  text-align: center;
}

.wechat-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.wechat-btn {
  width: 100%;
  height: 90rpx;
  background: #07c160;
  color: white;
  border-radius: 15rpx;
  font-size: 28rpx;
}

.tips {
  margin-top: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
