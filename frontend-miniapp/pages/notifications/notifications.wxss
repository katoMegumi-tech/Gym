.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.notification-list {
  display: flex;
  flex-direction: column;
}

.notification-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.notification-item.read {
  opacity: 0.7;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: #e3f2fd;
  color: #1976d2;
}

.type-tag.type-system {
  background: #e3f2fd;
  color: #1976d2;
}

.type-tag.type-activity {
  background: #fff3e0;
  color: #f57c00;
}

.type-tag.type-venue {
  background: #e8f5e9;
  color: #388e3c;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.notification-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.notification-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.unread-dot {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 16rpx;
  height: 16rpx;
  background: #f5576c;
  border-radius: 50%;
}
