<view class="container">
  <view class="user-info" wx:if="{{userInfo}}">
    <view class="avatar" wx:if="{{!userInfo.avatarUrl}}"></view>
    <image class="avatar" wx:else src="{{userInfo.avatarUrl}}" />
    <text class="username">{{userInfo.realName || userInfo.username}}</text>
  </view>
  
  <view class="login-btn" wx:else bindtap="goToLogin">
    <text>点击登录</text>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="goToReservations">
      <text class="menu-icon">📅</text>
      <text class="menu-text">我的预约</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToCoupons">
      <text class="menu-icon">🎫</text>
      <text class="menu-text">我的优惠券</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToFavorites">
      <text class="menu-icon">⭐</text>
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToFeedback">
      <text class="menu-icon">💬</text>
      <text class="menu-text">意见反馈</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <button class="logout-btn" wx:if="{{userInfo}}" bindtap="handleLogout">退出登录</button>
</view>
