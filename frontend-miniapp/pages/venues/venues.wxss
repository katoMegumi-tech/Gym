.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 24rpx;
}

/* 搜索区域 */
.search-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 24rpx;
  padding-top: 12rpx;
}

.search-bar {
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  background: white;
  padding: 20rpx 28rpx;
  border-radius: 40rpx 0 0 40rpx;
  font-size: 28rpx;
}

.search-btn {
  background: rgba(255,255,255,0.3);
  color: white;
  padding: 20rpx 32rpx;
  border-radius: 0 40rpx 40rpx 0;
  font-size: 28rpx;
  font-weight: 500;
}

.search-tag {
  display: inline-flex;
  align-items: center;
  background: rgba(255,255,255,0.2);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.tag-close {
  margin-left: 12rpx;
  font-size: 28rpx;
}

/* 场馆列表 */
.venue-list {
  padding: 24rpx;
}

.venue-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.venue-cover {
  position: relative;
  height: 280rpx;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 100rpx;
  opacity: 0.5;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.venue-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.venue-badge.open {
  background: rgba(76, 175, 80, 0.9);
  color: white;
}

.venue-badge.closed {
  background: rgba(0,0,0,0.6);
  color: white;
}

.venue-content {
  padding: 24rpx;
}

.venue-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.venue-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

.venue-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.venue-action {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.action-arrow {
  font-size: 36rpx;
  color: #667eea;
  margin-left: 8rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
