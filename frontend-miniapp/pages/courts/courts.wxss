.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.filter {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.picker {
  flex: 1;
  padding: 15rpx 30rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.court-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.court-item {
  width: calc(50% - 10rpx);
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.court-image {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.court-info {
  padding: 20rpx;
}

.court-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.court-type,
.court-capacity {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.court-status {
  margin-top: 10rpx;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.status-tag.available {
  background: #e8f5e9;
  color: #4caf50;
}

.status-tag.unavailable {
  background: #ffebee;
  color: #f44336;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}
